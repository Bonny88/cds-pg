{
  "scripts": {
    "start": "cds run",
    "clear": "rm -rf _gen/*",
    "copycds:db": "npm run _copycds:db:todeployer && npm run _copycds:db:tosrv",
    "_copycds:db:todeployer": "copyfiles -a ./db/* ./db/**/* scp-deployment",
    "_copycds:db:tosrv": "cp -r db _gen/",
    "copycds:srv": "npm run _copycds:srv:todeployer && npm run _copycds:srv:tosrv",
    "_copycds:srv:todeployer": "copyfiles -a ./srv/* ./srv/**/* scp-deployment",
    "_copycds:srv:tosrv": "copyfiles srv/**/* _gen && cp as-scp-package.json _gen/package.json"
  },
  "dependencies": {
    "@sap/cds": "^4.3.0",
    "@sap/cds-dk": "^3.2.0",
    "@sap/xsenv": "^3.1.0",
    "@sap/xssec": "^3.0.10",
    "cds-pg": "^0.0.30",
    "express": "^4.17.1",
    "passport": "^0.4.1",
    "pg": "^8.5.1"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "database"
      },
      "database": {
        "impl": "cds-pg",
        "model": ["srv"]
      }
    }
  }
}
